<!-- in this file we define the HTML structure for the home page which will be rendered by the Express server -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <header>
        <h1>Welcome to the Home Page</h1>
    </header>
    <main>
        <p>This is the main content of the home page.</p>
    </main>
    <footer>
        <p>&copy; 2024 My Website</p>
    </footer>
    <!-- Implemting for loops  -->
<ul>
  <% for(let i = 0; i < items.length; i++) { %>
    <li><%= items[i] %></li>
  <% } %>
</ul>
<!-- implemting if-else condition -->
<% if(user) { %>
  <p> Hello, <%= user %>! Welcome back!</p>
<% } else { %>
  <p> Hello, Guest! Please log in.</p>
<% } %>
<!-- implementing switch case -->
<% switch(role) { %>
  <% case 'admin': %>
    <p> You have administrative privileges. </p>
    <% break; %>
  <% case 'user': %>
    <p> You are logged in as a user. </p>
    <% break; %>
  <% default: %>
    <p> You are browsing as a guest. </p>
<% } %>
</body>
</html>
